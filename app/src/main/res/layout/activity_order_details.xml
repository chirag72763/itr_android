<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main_content"
    tools:context=".OrderDetails"
    android:background="@color/WhiteSmoke">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:cardElevation="10dp">
        <RelativeLayout
            android:background="@color/WhiteSmoke"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_action_navigation_arrow_back"
                android:padding="12dp"
                android:id="@+id/back_button"
                app:tint="@color/grey_hard"
                tools:ignore="ContentDescription" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/summary"
                android:textSize="17sp"
                android:layout_marginEnd="50dp"
                android:layout_toEndOf="@id/back_button"
                android:textColor="@color/black"
                android:gravity="center_vertical" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_baseline_call_24"
                android:layout_marginEnd="10dp"
                android:padding="10dp"
                android:background="@drawable/grey_border"
                android:layout_alignParentEnd="true"
                android:id="@+id/call_button"
                app:tint="@color/colorPrimaryDark"
                tools:ignore="ContentDescription" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:layout_marginTop="70dp"
        android:scrollIndicators="none"
        tools:targetApi="m">
        <LinearLayout
            android:padding="15dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="150dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/order_layout1"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:gravity="center"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="25sp"
                                android:layout_height="25sp"
                                android:id="@+id/check1"
                                android:src="@drawable/ic_baseline_check_circle_outline_24"
                                app:tint="@color/grey_medium" />
                            <ImageView
                                android:id="@+id/cancel1"
                                android:layout_width="25sp"
                                android:layout_height="25sp"
                                android:visibility="gone"
                                android:src="@drawable/ic_baseline_cancel_24"/>
                        </LinearLayout>
                    </LinearLayout>

                    <View
                        android:id="@+id/line1"
                        android:layout_width="match_parent"
                        android:layout_height="1sp"
                        android:layout_weight="0.8"
                        android:layout_marginTop="10sp"
                        android:background="@color/grey_bg"/>
                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:gravity="center"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="25sp"
                                android:layout_height="25sp"
                                android:id="@+id/check2"
                                android:src="@drawable/ic_baseline_check_circle_outline_24"
                                app:tint="@color/grey_medium" />
                            <ImageView
                                android:id="@+id/cancel2"
                                android:visibility="gone"
                                android:layout_width="25sp"
                                android:layout_height="25sp"
                                android:src="@drawable/ic_baseline_cancel_24"/>
                        </LinearLayout>

                    </LinearLayout>
                    <View
                        android:id="@+id/line2"
                        android:layout_width="match_parent"
                        android:layout_height="1sp"
                        android:layout_weight="0.8"
                        android:layout_marginTop="10sp"
                        android:background="@color/grey_bg"/>
                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:gravity="center"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="25sp"
                                android:layout_height="25sp"
                                android:id="@+id/check3"
                                android:src="@drawable/ic_baseline_check_circle_outline_24"
                                app:tint="@color/grey_medium" />
                            <ImageView
                                android:id="@+id/cancel3"
                                android:visibility="gone"
                                android:layout_width="25sp"
                                android:layout_height="25sp"
                                android:src="@drawable/ic_baseline_cancel_24"/>
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="5sp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Order\nPlaced"
                        android:textAlignment="textStart"
                        android:id="@+id/status1"
                        android:textColor="@color/grey_medium"
                        android:fontFamily="sans-serif"
                        android:textSize="13sp"
                        android:layout_weight="1"
                        tools:ignore="RtlCompat" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_weight="1.1"/>
                    <TextView
                        android:gravity="center"
                        android:id="@+id/status2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Order\nAccepted"
                        android:textColor="@color/grey_medium"
                        android:fontFamily="sans-serif"
                        android:textSize="13sp"
                        android:layout_weight="1"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_weight="1.1"/>
                    <TextView
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="textEnd"
                        android:text="Order\nDelivered"
                        android:textColor="@color/grey_medium"
                        android:fontFamily="sans-serif"
                        android:textSize="13sp"
                        android:id="@+id/status3"
                        android:layout_weight="1"
                        tools:ignore="RtlCompat" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/order_layout2"
                android:visibility="gone"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:gravity="center"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="20sp"
                                android:layout_height="20sp"
                                android:src="@drawable/ic_baseline_check_circle_outline_24"
                                app:tint="@color/colorPrimaryDark" />
                        </LinearLayout>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1sp"
                        android:layout_weight="0.8"
                        android:layout_marginTop="10sp"
                        android:background="@color/colorPrimaryDark"/>
                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:gravity="center"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="20sp"
                                android:layout_height="20sp"
                                android:src="@drawable/ic_baseline_check_circle_outline_24"
                                app:tint="@color/colorPrimaryDark" />
                        </LinearLayout>

                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1sp"
                        android:layout_weight="0.8"
                        android:layout_marginTop="10sp"
                        android:background="@color/colorPrimaryDark"/>
                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:gravity="center"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="20sp"
                                android:layout_height="20sp"
                                android:src="@drawable/ic_baseline_check_circle_outline_24"
                                app:tint="@color/colorPrimaryDark" />
                        </LinearLayout>

                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1sp"
                        android:layout_weight="0.8"
                        android:layout_marginTop="10sp"
                        android:background="@color/colorPrimaryDark"/>
                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:gravity="center"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="25sp"
                                android:layout_height="25sp"
                                android:src="@drawable/ic_baseline_check_circle_outline_24"
                                app:tint="@color/colorPrimaryDark" />

                        </LinearLayout>

                    </LinearLayout>



                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="5sp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Order\nPlaced"
                        android:textAlignment="textStart"
                        android:textColor="@color/colorPrimaryDark"
                        android:fontFamily="sans-serif"
                        android:textSize="11sp"
                        android:layout_weight="0.9"
                        tools:ignore="RtlCompat" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_weight="1.1"/>
                    <TextView
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Order\nAccepted"
                        android:textColor="@color/colorPrimaryDark"
                        android:fontFamily="sans-serif"
                        android:textSize="11sp"
                        android:layout_weight="0.9"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_weight="1.1"/>
                    <TextView
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:text="Order\nDelivered"
                        android:textColor="@color/colorPrimaryDark"
                        android:fontFamily="sans-serif"
                        android:textSize="11sp"
                        android:layout_weight="0.9"
                        tools:ignore="RtlCompat" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_weight="1.1"/>
                    <TextView
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="textEnd"
                        android:text="Return\nRequested"
                        android:textColor="@color/blue"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif"
                        android:textSize="14sp"
                        android:id="@+id/status4"
                        android:layout_weight="0.9"
                        tools:ignore="RtlCompat" />

                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_marginTop="25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/order_details"
                android:fontFamily="sans-serif-condensed"
                android:textSize="18sp"
                android:textColor="@color/black"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_margin="10dp"
                android:background="@color/grey_medium"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/order_id"
                android:fontFamily="sans-serif-condensed-light"
                android:textSize="13sp" />
            <TextView
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/order_id"
                android:fontFamily="sans-serif-condensed"
                android:textSize="15sp"
                android:layout_marginBottom="10dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/payment"
                android:fontFamily="sans-serif-condensed-light"
                android:textSize="13sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/pay_on_delivery"
                android:id="@+id/payment_mode"
                android:fontFamily="sans-serif-condensed"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:layout_marginBottom="10dp"/>
            <TextView
                android:layout_width="match_parent"
                android:fontFamily="sans-serif-condensed-light"
                android:layout_height="wrap_content"
                android:text="@string/order_date"
                android:textSize="13sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/order_date"
                android:fontFamily="sans-serif-condensed"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:layout_marginBottom="10dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/delivery_schedule"
                android:fontFamily="sans-serif-condensed-light"
                android:textSize="13sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/order_contact"
                android:fontFamily="sans-serif-condensed"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:layout_marginBottom="10dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/deliver_to"
                android:fontFamily="sans-serif-condensed-light"
                android:textSize="13sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/order_address"
                android:fontFamily="sans-serif-condensed"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:visibility="gone"
                android:layout_marginTop="20sp"
                android:textColor="@color/blue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/order_message"
                android:fontFamily="sans-serif"
                android:textSize="18sp"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/your_order"
                android:fontFamily="sans-serif-condensed"
                android:textSize="18sp"
                android:textColor="@color/black"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_margin="10dp"
                android:background="@color/grey_medium"/>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/recyclerViewOrderDetails"/>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/item_total"
                    android:fontFamily="sans-serif-condensed-light"
                    android:gravity="center_vertical"
                    android:textSize="15sp"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/item_total"
                    android:gravity="end"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:fontFamily="sans-serif-condensed"
                    android:layout_weight="2"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp">
                <TextView
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-condensed-light"
                    android:text="@string/partner_delivery_fee"
                    android:gravity="center_vertical"
                    android:textSize="15sp"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:id="@+id/delivery_fee"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif-condensed"
                    android:layout_weight="2"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp">
                <TextView
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/grand_total"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:gravity="center_vertical"
                    android:textSize="16sp"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:textColor="@color/black"
                    android:id="@+id/to_pay"
                    android:textStyle="bold"
                    android:textSize="17sp"
                    android:fontFamily="sans-serif-condensed"
                    android:layout_weight="2"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.1px"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@color/grey_medium"
                tools:ignore="PxUsage" />

            <LinearLayout
                android:layout_marginTop="25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/cancel_order"
                    android:fontFamily="sans-serif-condensed-light"
                    android:textStyle="bold"
                    android:id="@+id/cancel_order"
                    android:layout_gravity="center"
                    android:padding="10dp"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:layout_margin="5dp"
                    android:textColor="@color/red_color"
                    android:layout_weight="1"
                    android:visibility="gone"
                    android:background="@drawable/grey_border"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/return_request"
                    android:fontFamily="sans-serif-condensed-light"
                    android:textStyle="bold"
                    android:visibility="gone"
                    android:gravity="center"
                    android:id="@+id/return_order"
                    android:layout_gravity="center"
                    android:padding="10dp"
                    android:layout_margin="5dp"
                    android:textSize="16sp"
                    android:textColor="@color/blue"
                    android:layout_weight="1"
                    android:background="@drawable/grey_border"/>

            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</RelativeLayout>
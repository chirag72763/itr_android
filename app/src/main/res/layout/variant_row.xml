<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="15dp"
    android:id="@+id/variant_detail_row"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="100dp"
            android:textSize="15sp"
            android:clickable="false"
            android:textColor="@color/grey_medium"
            android:fontFamily="sans-serif-condensed"
            android:id="@+id/variant_radio"
            android:text="500 Gms"/>
        <LinearLayout
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:gravity="end"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/variant_price"
                android:textColor="@color/black"
                android:text="₹ 60"
                android:textStyle="bold"
                android:textSize="18sp" />
            <TextView
                android:text="₹ 80"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/grey_medium"
                android:id="@+id/variant_original"
                android:layout_marginStart="10dp"
                android:fontFamily="sans-serif-condensed"
                android:textSize="15sp" />
            <TextView
                android:text="23% OFF"
                android:fontFamily="sans-serif-condensed"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:visibility="gone"
                android:id="@+id/variant_percentage"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:textColor="@color/green_color"
                android:textSize="12dp" />

        </LinearLayout>
    </LinearLayout>

    <Button
        android:layout_marginTop="10sp"
        android:textSize="12sp"
        android:fontFamily="sans-serif-condensed"
        android:textColor="@color/colorPrimaryDark"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:layout_width="90sp"
        android:layout_height="35sp"
        android:id="@+id/add_button"
        android:text="Add"
        android:textAllCaps="false"
        android:background="@drawable/primary_border"/>
    <Button
        android:layout_marginTop="10sp"
        android:visibility="gone"
        android:textSize="11sp"
        android:fontFamily="sans-serif-condensed"
        android:textColor="@color/grey_medium"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:layout_width="90sp"
        android:layout_height="35sp"
        android:id="@+id/out_button"
        android:text="Out of Stock"
        android:background="@drawable/grey_border"
        tools:ignore="SmallSp" />

</RelativeLayout>